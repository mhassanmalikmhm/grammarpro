{
  "version": 2,
  "builds": [
    {
      "src": "*.js",
      "use": "@vercel/static"
    },
    {
      "src": "*.css",
      "use": "@vercel/static"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "api/grammar.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/grammar",
      "dest": "/api/grammar.js",
      "methods": ["POST", "OPTIONS"]
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}